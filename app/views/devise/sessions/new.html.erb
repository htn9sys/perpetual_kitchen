<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'registration-main', local: true do |f| %>
<div class='form-wrap2'>
<%= render 'shared/loading' %>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでもOK", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"登録したパスワードを入力" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "Press to Go！" ,class:"login-blue-btn", id: "submit-btn" %>
    <script src="button.js"></script>
  </div>
  <div class='footer-text'>© Perpetual Kitchen</div>
</div>
<% end %>